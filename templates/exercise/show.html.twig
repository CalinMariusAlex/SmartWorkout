{% extends 'base.html.twig' %}

{% block title %}Exercises!{% endblock %}

{% block body %}
    <style>
        .button-group {
            display: flex;
            gap: 10px;
        }

        .button-group button {
            padding: 5px 10px;
            cursor: pointer;
        }
    </style>

    <section class="intro">
    <div class="gradient-custom-2 h-100">
    <div class="mask d-flex align-items-center h-100">
    <div class="container">
    <div class="row justify-content-center">
    <div class="col-12">
    <div class="table-responsive">
        <table class="table table-dark table-bordered mb-0 table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Muscle group</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for exercise in exercises %}
                <tr>
                    <td>{{ exercise.id }}</td>
                    <td>{{ exercise.name }}</td>
                    <td>{{ exercise.getMuscleGroup().getName() }}</td>
                    <td>
                        <div class="button-group">
                            <form action="{{ path('edit_exercise', { 'id': exercise.id }) }}">
                                <button>
                                    Edit
                                </button>
                            </form>
                            <form action="{{ path('delete_exercise', { 'id': exercise.id }) }}" method="delete">
                                <button>
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    </div>
    </div>
    </div>
    </div>
    </div>
    </section>

    <script>
        function editExercise(id) {
            console.log('edit', id);
        }

        function deleteExercise(id) {
            console.log('delete', id);
        }
    </script>
{% endblock %}