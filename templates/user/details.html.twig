{% extends 'base.html.twig' %}

{% block title %}Showing Users{% endblock %}

{% block body %}

    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        .button-group {
            display: flex;
            gap: 10px;
        }

        .button-group button {
            padding: 5px 10px;
            cursor: pointer;
        }
    </style>


    <table class="table" style="width:400px">
        <thead>
        <tr>
            <th scope="col">Workouts</th>
            <th scope="col">Exercises</th>
        </tr>
        </thead>
        <tbody>
            <tr>

                {% for workout in user.workouts %}
                    <tr>
                    <td>{{ workout.name }}</td>
                    <td>
                    {% for exercise in workout.exerciseLogs %}
                       <b>{{ exercise.exercise.name }}</b> <br>
                        Duration:   {{ exercise.duration }}<br>
                            Sets:   {{ exercise.sets }}<br>
                            Reps:   {{ exercise.reps }} <br>
                    {% endfor %}
                    </td>
            </tr>
                {% endfor %}

            </tr>

        </tbody>
    </table>

{% endblock %}