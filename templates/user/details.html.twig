{% extends 'base.html.twig' %}

{% block title %}Showing Users{% endblock %}

{% block body %}

    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        .button-group {
            display: flex;
            gap: 10px;
        }

        .button-group button {
            padding: 5px 10px;
            cursor: pointer;
        }
    </style>


    <section class="intro">
    <div class="gradient-custom-2 h-100">
    <div class="mask d-flex align-items-center h-100">
    <div class="container">
    <div class="row justify-content-center">
    <div class="col-12">
    <div class="table-responsive">
    <table class="table table-dark table-bordered mb-0 table-hover">
        <thead>
        <tr>
            <th scope="col">Workouts</th>
            <th scope="col">Exercises</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                {% for workout in user.workouts %}
                <tr>
                    <td>
                        {{ workout.name }}<br>

                        {% set value = 0 %}

                        {% for exercise in workout.exerciseLogs %}
                            {% set value = value + exercise.duration %}
                        {% endfor %}

                        Total duration: {{ value }}

                    </td>
                    <td>
                    {% for exercise in workout.exerciseLogs %}
                        <p>
                            <b>{{ exercise.exercise.name }}</b> &nbsp; &nbsp;
                            Duration:   {{ exercise.duration }} &nbsp; &nbsp;
                            Sets:   {{ exercise.sets }} &nbsp; &nbsp;
                            Reps:   {{ exercise.reps }} &nbsp; &nbsp;
                            Weight:   {{ exercise.weight }} <br>
                        </p>


                    {% endfor %}
                    </td>
                </tr>
                {% endfor %}

            </tr>

        </tbody>
    </table>
    </div>
    </div>
    </div>
    </div>
    </div>
    </div>
    </section>

{% endblock %}