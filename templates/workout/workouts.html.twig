{% extends 'base.html.twig' %}

{% block title %}Exercises!{% endblock %}

{% block body %}


    <section class="intro">
    <div class="gradient-custom-2 h-100">
    <div class="mask d-flex align-items-center h-100">
    <div class="container">
    <div class="row justify-content-center">
    <div class="col-12">
    <div class="table-responsive">
        <table class="table table-dark table-bordered mb-0 table-hover">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Workout</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Date</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>

            {% for workout in workouts %}

                <tr>
                    <th scope="row">{{ workout.id }}</th>
                    <td>{{ workout.name }}</td>
                    <td>{{ workout.person.name }}</td>
                    <td>{{ workout.person.email }}</td>
                    <td>{{ workout.createdAt|date("m/d/Y h:m") }}</td>
                    <td>
                        <form action="{{ path('delete_workout', { 'id': workout.id }) }}" method="delete">
                            <button >
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>

            {% endfor %}

            </tbody>
        </table>
    </div>
    </div>
    </div>
    </div>
    </div>
    </div>
    </section>
{% endblock %}